{
    // See https://go.microsoft.com/fwlink/?LinkId=759670
    // for the documentation about the jsconfig.json format
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
        "lib": [
            "ESNext",
            "DOM"
        ]
    },
    "exclude": [
        "**/node_modules/**",
        "bower_components",
        "jspm_packages",
        "tmp",
        "temp",
        // "_tmp"
    ],
    "include": [
        "src/**/*"
    ]
}